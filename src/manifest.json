{
  "manifest_version": 2,

  "name": "Weblink",
  "description": "Connects to a local linkbase and offers easy interaction",
  "version": "1.3",

  "icons": {
    "16":  "images/logo_16.png",
    "48":  "images/logo_48.png",
    "128": "images/logo_128.png" },

  "browser_action": {
    "default_icon": "images/logo_small.png",
    "default_popup": "popup.html"
  },

  "background":{
    "scripts": ["js/background.js"]
  },

  "options_ui": {
    "page": "options.html"
  },

  "permissions": [
    "activeTab", "tabs", "storage"
  ]
}